<body class="logIn" id="loginContent">
    <div class="row w-100 h-100 ">
        <div class="col-sm-2" style="height:50px;">
            <a href="/"><i class="fas fa-arrow-circle-left" title="Regresar"></i></a>
        </div>
        <div class="col-lg-12 h-75 ">
            <form id="loginForm" action="POST" class="w-100 h-100 d-flex justify-content-center align-items-center">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-7 mb-4">
                        <img class="imgLogin" src="/media/SMUMLogo.png" alt="">
                    </div>
                    <div class="col-lg-7">
                        <h1>
                            <div>Salud<span> Mental UM</span></div>
                        </h1>
                    </div>
                    <div class="col-lg-7 d-flex justify-content-center flex-column align-items-center">
                        <div class="input-group text-center" style="width: auto; min-width: 0;">
                            <input class="mt-2 passInput" type="text" placeholder="Usuario" name="username"
                                id="username">
                        </div>
                        <div class="input-group text-center" style="width: auto; min-width: 0;">
                            <input class="passInput1" type="password" placeholder="Contraseña" name="password"
                                id="password">
                            <div class="input-group-append">
                                <span class="input-group-text spn" style="padding: 0.35rem;">
                                    <i class="fa fa-fw fa-eye" id="togglePassword"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 mt-4">
                        <button type="submit" value="Login" class="btn btn-primary butLogin">LogIn</button>
                    </div>
                    {{!-- <div class="col-lg-7 mt-2">
                        <a href="/recoverPassword">Cambiar contraseña</a>
                    </div> --}}
                </div>
            </form>
        </div>
    </div>
    <div id="preloader"></div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.5/dist/sweetalert2.all.min.js"></script>
    <script src="/js/login.js"></script>
</body>